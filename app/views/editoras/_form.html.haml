= form_for @editora do |f|
  - if @editora.errors.any?
    #error_explanation
      %h2= "#{pluralize(@editora.errors.count, "error")} prohibited this editora from being saved:"
      %ul
        - @editora.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :cidade_id
    = f.text_field :cidade_id
  .actions
    = f.submit 'Save'
