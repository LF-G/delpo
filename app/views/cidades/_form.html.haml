= form_for @cidade do |f|
  - if @cidade.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cidade.errors.count, "error")} prohibited this cidade from being saved:"
      %ul
        - @cidade.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :nome
    = f.text_field :nome
  .actions
    = f.submit 'Save'
