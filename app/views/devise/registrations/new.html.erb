<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %><br />
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :level %>
    <%= f.number_field :level %>
  </div>

  <div class="field">
    <%= f.label :instituição %>
    <%= f.text_field :instituicao %>
  </div>


  <div class="field">
    <%= f.label :lattes %>
    <%= f.text_field :lattes %><br />
  </div>


  <div class="field">
    <%= f.label :abreviatura %>
    <%= f.text_field :abreviatura %><br />
  </div>


  <div class="field">
    <%= f.label :filologia %>
    <%= f.check_box :filologia %><br />
  </div>

  <div class="field">
    <%= f.label :edição %>
    <%= f.check_box :edicao %><br />
  </div>


  <div class="field">
    <%= f.label :progamador %>
    <%= f.check_box :programador %><br />
  </div>


  <div class="field">
    <%= f.label :produtivo %>
    <%= f.check_box :produtivo %><br />
  </div>

  <div class="actions">
    <%= f.submit 'Save'%>
  </div>
<% end %>

